<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:minHeight="100dp">

    <ImageView
        android:id="@+id/desc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/desc_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:maxHeight="100dp"
        android:maxWidth="150dp"
        android:minHeight="100dp"
        android:minWidth="150dp"
        android:src="@drawable/geometry"
        android:adjustViewBounds="false"
        android:cropToPadding="false"/>

    <TextView
        android:id="@+id/desc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/desc_image_number"
        android:text="@string/for_test_name_lesson"
        android:textSize="20sp"
        android:minLines="3"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"/>


    <ImageView
        android:id="@+id/desc_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/lesson_number_0"/>

    <TextView
        android:id="@+id/desc_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/desc_image"
        android:layout_alignTop="@+id/desc_image"
        android:layout_marginLeft="5dp"
        android:text="@string/for_test_time1"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_test_time2"
        android:layout_below="@+id/desc_time1"
        android:layout_toRightOf="@+id/desc_image"
        android:layout_toEndOf="@+id/desc_image"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/for_test_description_lesson"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/desc_time2"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/desc_image"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/desc_image"
        android:layout_marginTop="10dp"
        android:text="@string/information_about_the_lesson"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_value_name_teachers"
        android:text="@string/teachers_name"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_information"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_name_teachers"
        android:text="@string/for_test_teachers_lesson"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_value_name_teachers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/desc_value_name_time"
        android:text="@string/time"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_name_teachers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/desc_before_lesson_time"
        android:text="До начала пары:"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_value_name_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-condensed"/>


</RelativeLayout>