<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/desc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/desc_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:src="@drawable/geometry" />

    <TextView
        android:id="@+id/desc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/desc_image_number"
        android:text="@string/big_string_for_test"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/desc_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_name"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/desc_image"
        android:layout_toRightOf="@+id/desc_image"
        android:text="@string/big_string_for_test" />

    <ImageView
        android:id="@+id/desc_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/lesson_number_0" />

    <TextView
        android:id="@+id/desc_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_description"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/desc_image"
        android:text="@string/time1" />

    <TextView
        android:id="@+id/desc_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_time1"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/desc_image"
        android:layout_toRightOf="@+id/desc_image"
        android:text="@string/time2" />

    <TextView
        android:id="@+id/desc_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/desc_image"
        android:text="@string/big_string_for_test" />


</RelativeLayout>